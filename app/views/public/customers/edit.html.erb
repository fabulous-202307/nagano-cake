<div class="container">
  <h2>会員情報編集</h2>
  <%= form_with (model: @customer, url: "/#{@customer.full_name}") do |f| %>
    <div class="row mb-3">
      <%= f.label "氏名", class: "col-2"%>
      <%= f.text_field :last_name, autofocus: true, class: "col-2 mr-5" %>
      <%= f.text_field :first_name, autofocus: true, class: "col-2"%>
    </div>

    <div class="row mb-3">
      <%= f.label "フリガナ", class: "col-2" %>
      <%= f.text_field :last_name_kana, autofocus: true, class: "col-2 mr-5" %>
      <%= f.text_field :first_name_kana, autofocus: true, class: "col-2" %>
    </div>

    <div class="row mb-3">
      <%= f.label :post_code, "郵便番号", class: "col-2"%>
      <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code", class: "col-2" %>
    </div>

    <div class="row mb-3">
      <%= f.label :address, "住所", class: "col-2" %>
      <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "col-6" %>
    </div>

    <div class="row mb-3">
      <%= f.label :phone_number, "電話番号", class: "col-2" %>
      <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: "col-2" %>
    </div>

    <div class="row mb-3">
      <%= f.label :email , "メールアドレス", class: "col-2"%>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-5" %>
    </div>

    <div class="row mb-3">
      <%= f.label :phone_number, "電話番号", class: "col-2" %>
      <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: "col-2" %>
    </div>

    <div class="row mb-3 d-flex ">
      <span class= "col-7"><%= f.submit "編集内容を保存", class:"btn btn-success" %></span>
      <%= link_to "退会する", customers_check_path, class:"btn btn-danger" %>
    </div>

  <% end %>


</div>









