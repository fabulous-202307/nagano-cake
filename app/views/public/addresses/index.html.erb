<div class="container mt-5">
  <h3 class="font-weight-bold">配送先登録/一覧</h3>

  <%= form_with model: @address, url: addresses_path, method: :post do |f| %>
    <div class="form-group row mt-5">
      <%= f.label :"郵便番号(ハイフンなし)", class: "col-3 md-2 col-form-label" %>
      <div class="col-4">
        <%= f.text_field :post_code, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :"住所", class: "col-3 md-2 col-form-label" %>
      <div class="col-6">
        <%= f.text_field :address, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :"宛名", class: "col-3 md-2 col-form-label" %>
      <div class="col-4">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-10 mt-5 offset-md-2 text-right">
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  <% end %>

  <table class="table mt-5">
    <thead class="thead-light">
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.post_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to "編集", edit_address_path(address.id), class: "btn btn-success" %>
            <%= link_to "削除", address_path(address.id), method: :delete, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>




