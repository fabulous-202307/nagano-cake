<div class="container mt-5">
  <h3 class="font-weight-bold mb-5">配送先登録/一覧</h3>

  <%= form_with model: @address, url: addresses_path, method: :post do |f| %>
    <div class="form-group row">
      <%= f.label :"郵便番号(ハイフンなし)", class: "col-3 md-2 col-form-label" %>
      <div class="col-4">
        <%= f.text_field :post_code, placeholder: "0000000", class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :"住所", class: "col-3 md-2 col-form-label" %>
      <div class="col-6">
        <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :"宛名", class: "col-3 md-2 col-form-label" %>
      <div class="col-4">
        <%= f.text_field :name, placeholder: "令和道子", class: "form-control" %>
      </div>
    </div>
    <div class="text-right mt-5">
      <%= f.submit "新規登録", class: "btn btn-outline-primary" %>
    </div>
  <% end %>
    
  <% if @addresses.exists?%>
    <table class="table table-bordered mt-5">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.post_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to "編集", edit_address_path(address.id), class: "btn btn-outline-success" %>
              <%= link_to "削除", address_path(address.id), method: :delete, class: "btn btn-outline-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="row d-flex justify-content-center mt-5">
      <h4 class="font-weight-bold">まだご登録の住所はございません</h4>
    </div>
  <% end %>
</div>




