<div class="container">

  <div class="row mt-5">
    <div class="col-4 offset-md-2">
      <h3>ログイン</h3>
    </div>
  </div>

<div class="row">
  <div class="col-md- offset-md-2 mb-5" >
    会員の方はこちらからログイン
  </div>
</div>


  <%= form_with model: @customer, url: customer_session_path do |f| %>
     <div class="row mb-3">
        <%= f.label :email, "メールアドレス", class:"col-2 offset-3" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

     <div class="row mb-3">
        <%= f.label :password, "パスワード", class:"col-2 offset-3" %>
        <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
    <div class="d-grid gap-2 col-6 mx-auto " >

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-outline-primary" %>
       </div>
  <% end %>
      <div class= "mb-3">
         <%= render "public/shared/links" %>
      </div>
    </div>
</div>