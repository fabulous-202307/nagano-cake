<div class="container">
  <div class="row">
    
    <div class="col-3">
      
    </div>
    
    <div class="row col-9">
      <div class="mr-3">
        <%=image_tag @product.get_image(300, 225) %>
      </div>
      <div class="col-6">
        <h4><%= @product.name %></h4>
        <p><%= @product.detail %></p>
        <p>
          <span class="font-weight-bold">
            <%= number_to_currency(@product.with_tax_price, unit: "¥", format: "%u %n", precision: 0 ) %>
          </span>
          <span class="font-size-sm">(税込)</span>
        </p>
        
        <div class="row">
          
        </div>
      </div>
    </div>

  </div>
</div>