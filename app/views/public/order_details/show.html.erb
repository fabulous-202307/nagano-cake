<div class="container">
  <h5>注文履歴詳細</h5>
  
  <div class="row">
    
    <h6>注文情報</h6>
    <table class="table table-bordered">
      <tr>
        <th>注文日</th>
        <td><%=  %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td></td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td></td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td></td>
      </tr>
    </table>
    
    <h6>請求情報</h6>
    <table class="table table-bordered">
      <tr>
        <th>商品合計</th>
        <td>@order_detail.total</td>
      </tr>
      <tr>
        <th>配送料</th>
        <td></td>
      </tr>
      <tr>
        <th>ご請求額</th>
        <td></td>
      </tr>
    </table>
  </div>
  
  <div class="row">
    <h6>注文内容</h6>
    <table class="table table-bordered">
      <thead class="thead-light">
        <tr>
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% @order_detail.products.each do |product| %>
            <td><%= product.name %></td>
            <td><%= product.price.with_tax_price %></td>
            <td><%= product.amount %></td>
            <td><%= product.subtotal %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
  
</div>