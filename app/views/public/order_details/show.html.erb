<div class="container">
  <h5>注文履歴詳細</h5>
  
  <div class="row">
    
    <h6>注文情報</h6>
    <table class="table table-bordered">
      <tr>
        <th>注文日</th>
        <td><%= l @order.created_at, format: :long %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>
          〒<%= @order.post_code %><br>
          <%= @order.address %><br>
          <%= @order.name %>
        </td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td><%= @order.payment_method_i18n %></td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td><%= @order.status %></td>
      </tr>
    </table>
    
    <h6>請求情報</h6>
    <table class="table table-bordered">
      <tr>
        <th>商品合計</th>
        <td><%= @total %></td>
      </tr>
      <tr>
        <th>配送料</th>
        <td><%= @order.delivery_fee %></td>
      </tr>
      <tr>
        <th>ご請求額</th>
        <td><%= @order.billing_fee %></td>
      </tr>
    </table>
  </div>
  
  <div class="row">
    <h6>注文内容</h6>
    <table class="table table-bordered">
      <thead class="thead-light">
        <tr>
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order_detail.each do |detail| %>
          <tr>
            <td><%= detail.product.name %></td>
            <td><%= detail.price %></td>
            <td><%= detail.amount %></td>
            <td><%= detail.subtotal_no_tax %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
</div>