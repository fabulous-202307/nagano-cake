<div class="container">
  <div class="row">
    <h1>注文履歴一覧</h1>
  </div>
  
  <div class="row">
    <% if @order_details.exists? %>
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |detail| %>
            <tr>
              <td><%= detail.order.created_at %></td>
              <td>
                <%= detail.order.post_code %>
                <%= detail.order.address %>
                <%= detail.order.name %>
              </td>
              <td><%= detail.products%></td>
              <td><%= detail.order.billing_fee %></td>
              <td><%= detail.order.status %></td>
              <td><%= link_to "詳細" order_detail_path(detail.id), class: "btn btn-primary btn-sm p-2" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>まだご注文されていません</p>
    <% end %>
  </div>
  
  
</div>