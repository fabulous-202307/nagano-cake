<div class="container">
  <div class="row">
    <h1>注文履歴一覧</h1>
  </div>

  <div class="row">
    <% if @orders.exists? %>
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= l order.created_at, format: :long %></td>
              <td>
                <%= order.post_code %><br>
                <%= order.address %><br>
                <%= order.customer_id.name %>
              </td>
              <td>
                <% order.order_details.each do |order_detail| %>
                  <%= order_detail.product.name%><br>
                <% end %>
              </td>
              <td><%= number_to_currency(order.billing_fee, unit: "¥", format: "%u %n", precision: 0 ) %></td>
              <td><%= order.status %></td>
              <td><%= link_to "詳細", order_detail_path(order.id), class: "btn btn-primary btn-sm p-2" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>まだご注文されていません</p>
    <% end %>
  </div>
</div>