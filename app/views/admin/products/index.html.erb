<div class="container">
  <h3>商品一覧</h3>
  
  <table class="table">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.id %></td>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <td><%= product.genre.name %></td>
          <td><%= product.is_available %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>