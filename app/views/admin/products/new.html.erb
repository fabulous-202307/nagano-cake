<div class="container mt-4">

  <div class="row ml-5 pl-5">
    <h5>商品新規登録</h5>
  </div>
  <div class="d-flex justify-content-center">
    <%= render "layouts/errors", obj: @product %>
  </div>
    
  <div class="my-4 d-flex justify-content-center">
    <%= form_with model: [:admin, @product] do |f| %>

      <table class="table table-borderless">
        <tbody>
          <tr>
            <th><%= f.label "商品画像" %></th>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>
          <tr>
            <th><%= f.label "商品名" %></th>
            <td><%= f.text_field :name, autofocus: true, placeholder: "商品名", class: "form-control" %></td>
          </tr>
          <tr>
            <th><%= f.label "商品説明" %></th>
            <td><%= f.text_area :detail, autofocus: true, placeholder: "ここに説明文を記述します", rows: "5", class: "form-control" %></td>
          </tr>
          <tr>
            <th><%= f.label "ジャンル" %></th>
            <td><%= f.collection_select :genre_id, @genres, :id, :name, prompt: "--選択してください--" %></td>
          </tr>
          <tr>
            <th><%= f.label "税抜価格" %></th>
            <td><%= f.text_field :price, autofocus: true, placeholder: "1000", class: "col-7" %> 円</td>
          </tr>
          <tr>
            <th><%= f.label "販売ステータス" %></th>
            <td>
              <%= f.radio_button :is_available, true %>
              <%= f.label :is_available, "販売中", value: true  %>
              <%= f.radio_button :is_available, false, class: "ml-4" %>
              <%= f.label :is_available, "販売停止中", value: false  %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="d-flex justify-content-center">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>

</div>