<div class="container">
  <h3>商品詳細ページ</h3>
  <div class="row">
    <div class="col-lg-3">
      <%=image_tag @product.get_image(400, 400) %>
    </div>
    
    <div class="col-lg-7">
      <table class="table">
        <tr>
          <th>商品名</th>
          <td><%= @product.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @product.detail %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @product.genre.name %></td>
        </tr>
        <tr>
          <th>税込価格<br>（税抜価格）</th>
          <td><%= @product.with_tax_price.to_s(:delimited) %> (<%= @product.price.to_s(:delimited) %>) 円</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td class="font-weight-bold">
            <% if @product.is_available %>
              <p class="text-success">販売中</p>
            <% else %>
              <p class="text-secondary">販売停止中</p>
            <% end %>
          </td>
        </tr>
      </table>
      <div class="row d-flex justify-content-center">
        <%= link_to "編集する", edit_admin_product_path, class: "btn btn-success btn-lg" %>
      </div>
    </div>
  </div>
  
  

</div>
