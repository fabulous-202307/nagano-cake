<div class="container">
  <h3>ジャンル一覧・追加</h3>
  <div class="row">
    <%= form_with model: [:admin, @genre] do |f| %>
      <div class="form-group">
        <%= f.label "ジャンル名" %>
        <%= f.text_field :name, :placeholder => "ジャンル名"%>
        <%= f.submit "新規登録", class: "btn btn-success rounded-pill" %>
      </div>
    <% end %>
  </div>
  
  <table class="table col-lg-5">
    <thead>
      <tr>
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        
        <tr>
          <td>
            <%= genre.name %>
          </td>
          <td>
            <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
          </td>
        </tr>
        
      <% end %>
    </tbody>
  </table>
</div>