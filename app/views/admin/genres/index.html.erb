<div class="container mt-5">

  <div class="row">
    <h4 class="font-weight-bold mb-4 mr-5">ジャンル一覧・追加</h4>
  </div>
  <div class="row offset-md-3 offset-lg-4">
    <%= form_with model: [:admin, @genre] do |f| %>
      <div class="form-group row">
        <%= f.label "ジャンル名" ,class: "font-weight-bold mr-3" %>
        <%= f.text_field :name, :placeholder => "ジャンル名"%>
        <%= button_tag type: "submit", class: "btn btn-outline-secondary btn-sm ml-3" do %>
          <i class="fa-solid fa-square-plus fa-xl" style="color: #640125;"></i>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="row offset-md-3 offset-lg-4 mt-5">
    <table class="table table-hover table-borderless col-lg-6 col-md-8">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= link_to genre.name, genre_products_path(genre.id) %>
            </td>
            <td>
              <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-outline-success btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="d-flex justify-content-center">
    <%= paginate @genres %>
  </div>
</div>