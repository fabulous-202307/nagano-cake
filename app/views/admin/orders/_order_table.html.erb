<table class="table">
  <thead class="thead-light">
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th class="px-5">製作ステータス</th>
    </tr>
  </thead>
  <% order_details.each do |order_detail| %>
    <tbody>
      <tr>
        <td><%= order_detail.product.name %></td>
        <td><%= order_detail.price %></td>
        <td><%= order_detail.amount %></td>
        <td><%= order_detail.price * order_detail.amount %></td>
        <td class="px-5">
          <%= form_with model: order_detail, url:admin_order_detail_path(order_detail) do |f| %>
            <%= f.select :production_status, OrderDetail.production_statuses.keys %>
            <%= f.submit "更新", class:"btn btn-success btn-sm mb-1 ml-5" %>
          <% end %>
        </td>
      </tr>
    </tbody>
  <% end %>
</table>