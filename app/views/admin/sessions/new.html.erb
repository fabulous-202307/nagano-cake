<div class="container tp-5">
  <div class="row mt-5">
    <div class="col-4 offset-md-2">
      <h3>管理者ログイン</h3>
    </div>
  </div>
  <%= form_with model: @admin, url: new_admin_session_path do |f| %>
   <%= render "admin/shared/error_messages", resource: resource %>
  <div class="row mb-3">
    <%= f.label :email, "メールアドレス", class:"col-2 offset-3" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="row mb-3">
    <%= f.label :password,"パスワード", class:"col-2 offset-3" %>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <div class="d-grid gap-2 col-6 mx-auto " >
    <div class="actions">
    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-sm btn-outline-primary" %>
    </div>
<% end %>

  <%= render "admin/shared/links" %>
    </div>
  </div>
</div>



